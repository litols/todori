{
  "name": "todori",
  "version": "0.1.0",
  "description": "Claude Code-native task management MCP server with minimal context overhead",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "todori": "./dist/server/index.js"
  },
  "scripts": {
    "build:dist": "tsc --project tsconfig.build.json",
    "build": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "bun run build && bun run lint && bun run test:run",
    "inspect": "npx @modelcontextprotocol/inspector bun dist/server/index.js",
    "inspect:node": "npx @modelcontextprotocol/inspector node dist/server/index.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/uuid": "^11.0.0",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "proper-lockfile": "^4.1.2",
    "uuid": "^13.0.0",
    "yaml": "^2.8.2",
    "zod": "^4.1.13"
  }
}
